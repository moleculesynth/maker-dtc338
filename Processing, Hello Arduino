import processing.serial.*; //import the Serial library
 
Serial myPort;  //the Serial port object
String val;
int bg; // int to hold color of background in RGB
PImage img; // declare variable "a" of type PImage
// since we're doing serial handshaking, 
// we need to check if we've heard from the microcontroller
boolean firstContact = false;

void setup() {
  size(650, 650); //make our canvas 650 x 650 pixels big
  bg = color(91, 186, 158); // value of background color in RGB
 
  img = loadImage("AM.png"); // load image (placed in directory of your project)

  //  initialize your serial port and set the baud rate to 9600
  myPort = new Serial(this, Serial.list()[5], 9600); 
  // In Arduino click Tools > Serial Port and this is the number according 
  // to how far down your usb port is on the list, in my case it was the 5th
  myPort.bufferUntil('\n'); 
}

void draw() {
  background(bg); // Set backgruoud color to value stored in bg
  image(img, 0, 0); // Displays the image at its actual size at point (0,0)
}

void serialEvent( Serial myPort) {
//put the incoming data into a String - 
//the '\n' is our end delimiter indicating the end of a complete packet
val = myPort.readStringUntil('\n');
//make sure our data isn't empty before continuing
if (val != null) {
  //trim whitespace and formatting characters (like carriage return)
  val = trim(val);
  println(val);

  //look for our 'A' string to start the handshake
  //if it's there, clear the buffer, and send a request for data
  if (firstContact == false) {
    if (val.equals("Contact Established")) {
      myPort.clear();
      firstContact = true;
      myPort.write("Contact Established");
      println("contact");
    }
  }
  else { //if we've already established contact, keep getting and parsing data
    println(val);

    if (mousePressed == true) 
    {                           //if we clicked in the window
      myPort.write('1');        //send a 1
      println("Mouse Clicked");
    }

    // when you've parsed the data you have, ask for more:
    myPort.write("A");
    }
  }
}
